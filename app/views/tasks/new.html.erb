<div class="container text-center">
  <div class="col-sm-6 col-sm-offset-3 box">
    <%= form_for @new_task do |f| %>
      <%= f.label :name, "Enter a name" %>
      <%= f.text_field :name %>

      <%= f.label :done, "Done" %>
      <%= f.check_box :done %>

      <%= f.submit %>
    <% end %>
  </div>
</div>
